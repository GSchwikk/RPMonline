<p id="notice"><%= notice %></p>

<h1>Listing all Key Performance Indicators</h1>

<p>
  Download:
  <%= link_to "CSV", "#" %> |
  <%= link_to "Excel", "#" %>
</p>

<p>
  Upload:
  <%= link_to "CSV", "#" %> |
  <%= link_to "Excel", "#" %>
</p>

<%= form_tag updatevalues_organisation_kpis_path(@organisation), method: :get do %>
  	Select Start Date <%= date_select('event','date') %>
	<%= submit_tag "Change" %>
<% end %>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th width ="20%"></th>
      <th width ="20%"></th>
      <th>Week 1</th>
      <th>Week 2</th>
      <th>Week 3</th>
      <th>Week 4</th>
    </tr>
  </thead>

  <thead>
      <th width ="20%">Name</th>
      <th width ="20%">Units</th>
      <th><%= @week1.strftime('%d/%m/%Y') %></th>
      <th><%= @week2.strftime('%d/%m/%Y') %></th>
      <th><%= @week3.strftime('%d/%m/%Y') %></th>
      <th><%= @week4.strftime('%d/%m/%Y') %></th>

  </thead>

  <tbody>
    <% @kpis.each do |kpi| %>
      <tr>
        <td width ="20%"><%= kpi.name %></td>
        <td width ="20%"><%= kpi.units %></td>    

        <% if kpi.kpi_datapoints.wkvalue(@week1).first %>
          <td> <%= kpi.kpi_datapoints.wkvalue(@week1).first.value %></td>
        <% else %>
          <td> </td>
        <% end %>

        <% if kpi.kpi_datapoints.wkvalue(@week2).first %>
          <td> <%= kpi.kpi_datapoints.wkvalue(@week2).first.value %></td>
        <% else %>
          <td> </td>
        <% end %>

        <% if kpi.kpi_datapoints.wkvalue(@week3).first %>
          <td> <%= kpi.kpi_datapoints.wkvalue(@week3).first.value %></td>
        <% else %>
          <td> </td>
        <% end %>

        <% if kpi.kpi_datapoints.wkvalue(@week4).first %>
          <td> <%= kpi.kpi_datapoints.wkvalue(@week4).first.value %></td>
        <% else %>
          <td> </td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>