<p id="notice"><%= notice %></p>

<div class ="jumbotron">
  <div class="container">
    <h2> RPMOnline lets you set up Review and Progress Meetings</h2>
    <h3> Setup your own organisation, meetings, and KPIs </h3>
  </div>
</div>

<h1>Meetings:</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Division</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= link_to meeting.name, meeting , class: "btn btn-link" %></td>
        <td><%= meeting.division %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? && current_user.admin? %>
  <%= link_to new_meeting_path, class: "btn btn-default", data: { no_turbolink: true} do %>
    <i class="glyphicon glyphicon-plus"></i> New RPM
  <% end %>
<% end %>
