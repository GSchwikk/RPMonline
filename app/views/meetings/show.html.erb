<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @meeting.name %>
</p>

<p>
  <strong>Division:</strong>
  <%= @meeting.division %>
</p>

<%= link_to "Create Pack", new_meeting_pack_path(@meeting), class: "btn btn-default" %>
<br>
<br>

<% if @packs.blank? %>
	<h3>No packs yet</h3>
<% else %>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
	<% @packs.each do |pack| %>
	<tr>
		<td> <%= link_to pack.title, meeting_pack_path(@meeting, pack) , class: "btn btn-link" %> </td>
		<td> <%= pack.status %> </td>
		<td> <%=link_to "Update", edit_meeting_pack_path(@meeting, pack) %> </td>
		<td> <%=link_to "Delete", meeting_pack_path(@meeting, pack), method: :delete, data: { confirm: 'Are you sure?' } %> </td>
	</tr>
	<% end %>
  </tbody>
</table>
<% end %>

<%= link_to 'Edit', edit_meeting_path(@meeting), class: "btn btn-link" %> |
<%= link_to 'Back', meetings_path, class: "btn btn-link" %>
